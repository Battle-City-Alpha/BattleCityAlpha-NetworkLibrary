<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <targets>
            <target xsi:type="File" name="t" fileName="${basedir}/logs/${shortdate} - Library - Trace.log"
            layout="${longdate} [${uppercase:${level}}] ${logger} - ${message}"/>
            <target xsi:type="File" name="i" fileName="${basedir}/logs/${shortdate} - Library - Infos.log"
            layout="${longdate} [${uppercase:${level}}] ${logger} - ${message}"/>
            <target xsi:type="File" name="e" fileName="${basedir}/logs/${shortdate} - Library - Errors.log"
            layout="${longdate} [${uppercase:${level}}] ${logger} - ${message}"/>
            <target xsi:type="File" name="d" fileName="${basedir}/logs/${shortdate} - Library - Debug.log"
            layout="${longdate} [${uppercase:${level}}] ${logger} - ${message}"/>
  </targets>

  <rules>  
    <logger name="*" level="Trace" writeTo="t" />
    <logger name="*" level="Info" writeTo="i" />
    <logger name="*" level="Debug" writeTo="d" />
    <logger name="*" minlevel="Warn" writeTo="e" />
  </rules>
</nlog>
